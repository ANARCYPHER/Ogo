<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:id="@+id/lvl_click"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center|start|top"
            android:orientation="horizontal"
            android:padding="10dp"

            >

            <ImageView
                android:id="@+id/img_icon"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:paddingEnd="5dp"
                android:src="@drawable/ic_img_dummy" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_weight="1"
                android:gravity="center|start"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_timedate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_type_orders"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="$25"
                    android:textSize="14dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="15dp" />

                <TextView
                    android:id="@+id/txt_pickup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_round_pickup"
                    android:drawablePadding="5dp"
                    android:gravity="center|start"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="14dp" />

                <View
                    android:layout_width="10dp"
                    android:layout_height="15dp"
                    android:background="@drawable/dot"
                    android:rotation="90" />

                <TextView
                    android:id="@+id/txt_drop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_round_drop"
                    android:drawablePadding="5dp"
                    android:gravity="center|start"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="14dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="15dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                <ImageView

                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:src="@drawable/user" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>







